<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Logic.FDNormalization"
    tools:showIn="@layout/activity_fdnormalization">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="727dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight=".5"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/Headers"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_weight="0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/AttributesHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/attributes"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/FDHeader"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:text="@string/functional_dependencies"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/Lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:baselineAligned="false"
            android:gravity="top|center_horizontal"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="854dp">

            <ListView
                android:id="@+id/AttributeList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

            <ListView
                android:id="@+id/FDList"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight=".5" />

        </LinearLayout>

        <TextView
            android:id="@+id/ResultsHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:ems="10"
            android:layout_margin="16dp"
            android:text="@string/results"
            android:textSize="24sp" />


        <TextView
            android:id="@+id/results"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:scrollHorizontally="true"
            android:scrollbars="vertical"
            android:text="TextView"
            android:textSize="18sp"

            app:layout_constraintTop_toBottomOf="@+id/ResultsHeader" />

    </LinearLayout>

    <Button
        android:id="@+id/db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="createDB"
        android:text="@string/create_database"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="8dp" />

</android.support.constraint.ConstraintLayout>
